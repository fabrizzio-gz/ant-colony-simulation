{
    "compilerOptions": {
        "module": "none",
        "target": "es6",
        "allowJs": true,
        "checkJs": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": false,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "outDir": "./build",
        "rootDir": "./src/"
    },
    "include": [
      "./src/**/*",
      "./global.d.ts"
    ]
}

